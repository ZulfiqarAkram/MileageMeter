<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Vehicle Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/vehicleLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/select_vehicle">

                    <AutoCompleteTextView
                        android:id="@+id/vehicleDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/vehicleSettingsButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/vehicle_settings"
                    app:icon="@drawable/ic_settings" />

            </LinearLayout>

            <!-- No Vehicle Message -->
            <TextView
                android:id="@+id/noVehicleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="@string/no_vehicles_message"
                android:textAppearance="?attr/textAppearanceBody1"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Stats Cards -->
            <LinearLayout
                android:id="@+id/statsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- Last Mileage -->
                <include
                    android:id="@+id/lastMileageCard"
                    layout="@layout/view_stat_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Average Mileage -->
                <include
                    android:id="@+id/averageMileageCard"
                    layout="@layout/view_stat_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Monthly Fuel Usage -->
                <include
                    android:id="@+id/monthlyFuelCard"
                    layout="@layout/view_stat_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Add Vehicle Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_vehicle_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/add_vehicle" />

            <!-- View Reports Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/view_reports_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/view_reports"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB for adding fill-up -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_fill_up_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_fill_up"
        app:srcCompat="@drawable/ic_add" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>