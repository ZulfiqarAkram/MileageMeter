<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Vehicle Icon -->
            <ImageView
                android:id="@+id/vehicleTypeIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/vehicle_icon"
                android:tint="@android:color/white"
                tools:src="@drawable/ic_car" />

            <!-- Vehicle Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                android:id="@+id/vehicleNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@android:color/white"
                tools:text="My Car" />

            <TextView
                android:id="@+id/vehicleNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/white"
                tools:text="ABC123" />

            </LinearLayout>

        </LinearLayout>

        <!-- Stats Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp"
            android:rowCount="2">

            <!-- Last Mileage -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_mileage"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?android:textColorSecondary" />

                <TextView
                    android:id="@+id/lastMileageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="?attr/colorPrimary"
                    tools:text="12.5 km/L" />

            </LinearLayout>

            <!-- Average Mileage -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/average_mileage"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?android:textColorSecondary" />

                <TextView
                    android:id="@+id/averageMileageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="?attr/colorPrimary"
                    tools:text="11.8 km/L" />

            </LinearLayout>

            <!-- Total Distance -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_distance"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?android:textColorSecondary" />

                <TextView
                    android:id="@+id/totalDistanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    tools:text="1,234 km" />

            </LinearLayout>

            <!-- Monthly Fuel -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly_fuel"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?android:textColorSecondary" />

                <TextView
                    android:id="@+id/monthlyFuelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    tools:text="45.5 L" />

            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
